% \newglossaryentry{}{
%     name={},
%     description={\href{}{}}
%     % , text={} % Display differently in text than in glossary
%     % , plural={} % Default plural appends an 's'
% }

% EXAMPLES
\newglossaryentry{latex}{
    name={LaTeX},
    text={\LaTeX},
    description={\href{https://www.latex-project.org/}{is a high-quality typesetting system; it includes features designed for the production of technical and scientific documentation}}
}

\newglossaryentry{ts-def}{
    name={TypeScript},
    description={\href{http://www.typescriptlang.org/}{is a typed superset of JavaScript that compiles to plain JavaScript}}
}



