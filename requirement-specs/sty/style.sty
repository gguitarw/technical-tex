    \Huge
    \projectName\\

    \vspace{2ex}
    \LARGE
    \myAssignment\\

    % \small Version \docVersion
}

\author{
    Prepared by:\\
    \begin{tabular}{ r c l }
        First Last & \texttt{\#}12345678 & first.last@email.com
    \end{tabular}
}

\date{\mySemester} % {This document compiled on \myDate}

% Default header/footer
\fancyhf{}
\lhead{\emph{\myAssignment\ for \projectName}}

% Line below header and above footer
\renewcommand\headrulewidth{0.4pt}
\renewcommand\footrulewidth{0pt}

% Custom stuff for the first page
\fancypagestyle{firstpage}{
    \fancyhf{}
    \renewcommand\headrulewidth{0pt}
    \renewcommand\footrulewidth{0pt}
}

% Change "page _ of _" depending on section
\fancypagestyle{body}{\rhead{Page \thepage\ of \pageref*{EndOfBody}}}
\fancypagestyle{pre}{\rhead{Page \thepage\ of \pageref*{EndOfPre}}}
\fancypagestyle{post}{\rhead{Page \thepage\ of \pageref*{LastPage}}}

% Minted configuration
% \usemintedstyle{tango} % works a bit more nicely with WSUV slide formatting
\setminted{autogobble, fontsize=\small, tabsize=4}

\tikzset{initial text=$ $,
         ->,
         >=stealth',
         node distance=2cm}

